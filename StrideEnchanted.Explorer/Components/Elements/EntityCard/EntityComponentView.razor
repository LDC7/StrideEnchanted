@using Microsoft.AspNetCore.Components.Web
@using MudBlazor
@using StrideEnchanted.Explorer.Interfaces

<MudExpansionPanel Text="@this.Component.Name" Expanded="@true">
  @foreach (var parameter in this.Component.Parameters)
  {
    <EntityComponentParameterView @key="@parameter.Id" Parameter="@parameter" />
  }
</MudExpansionPanel>

@code {
  [Parameter]
  [EditorRequired]
  public required ITrackedEntityComponent Component { get; set; } = default!;
}
