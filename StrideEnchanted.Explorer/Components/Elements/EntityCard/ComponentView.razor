@using MudBlazor
@using StrideEnchanted.Explorer.Interfaces

<MudCard Class="p-2" Elevation="1" Style="height: 100%; overflow-y:auto;">
  <MudCardHeader>
    <MudText Typo="@Typo.h6">@this.Entity.Name</MudText>
  </MudCardHeader>
  <MudCardContent>
    <MudExpansionPanels MultiExpansion="true">
      @foreach (var component in this.Entity.Components)
      {
        <EntityComponentView @key="@component.Id" Component="@component" />
      }
    </MudExpansionPanels>
  </MudCardContent>
</MudCard>

@code {
  [Parameter]
  [EditorRequired]
  public required ITrackedEntity Entity { get; set; } = default!;
}
