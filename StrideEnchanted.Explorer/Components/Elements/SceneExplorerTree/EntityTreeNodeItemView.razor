@using Microsoft.AspNetCore.Components.Web
@using MudBlazor
@using StrideEnchanted.Explorer.Interfaces

<MudTreeViewItem id="@this.Entity.Id"
                 Value="@this.Entity"
                 Text="@this.Entity.Name"
                 IconColor="@Color.Primary"
                 Icon="@Icons.Material.Filled.Label"
                 Selected="@(this.Entity == this.Selected)"
                 OnClick="@this.HandleClick">
  @foreach (var childEntity in this.Entity.Children)
  {
    <EntityTreeNodeItemView Entity="@childEntity" OnSelect="@this.OnSelect" Selected="@this.Selected" />
  }
</MudTreeViewItem>

@code {
  [Parameter]
  [EditorRequired]
  public required ITrackedEntity Entity { get; set; } = default!;

  [Parameter]
  [EditorRequired]
  public object? Selected { get; set; }

  [Parameter]
  [EditorRequired]
  public EventCallback<object> OnSelect { get; set; }

  private Task HandleClick(MouseEventArgs args)
  {
    return this.OnSelect.InvokeAsync(this.Entity);
  }
}
